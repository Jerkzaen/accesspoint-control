datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id                   String    @id @default(uuid())
  numeroCaso           Int       @unique // Antes nroCaso
  empresa              String
  tipoIncidente        String    // Antes tipo
  ubicacion            String
  tecnicoAsignado      String    // Antes tecnico
  solicitante          String    // Antes contacto
  titulo               String    // Antes descripcion (para el resumen breve)
  descripcionDetallada String?   // Nuevo campo para la descripción larga
  prioridad            String
  estado               String    @default("Abierto")
  acciones             String    @default("[]") // Mantenido como String para JSON
  fechaCreacion        DateTime  @default(now()) // Antes createdAt
  fechaSolucion        DateTime?
  fechaActualizacion   DateTime  @updatedAt // Nuevo campo para rastrear actualizaciones

  // Aquí puedes añadir más campos a futuro si los necesitas
  // ej: categoria String?
  //     subCategoria String?
}

