datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Ticket {
  id              String    @id @default(uuid())
  nroCaso         Int       @unique
  empresa         String
  ubicacion       String
  contacto        String
  prioridad       String
  tecnico         String
  tipo            String
  descripcion     String
  acciones        String    @default("[]")    // <--- Â¡VUELTA A STRING!
  estado          String    @default("Abierto")
  fechaSolucion   DateTime?
  createdAt       DateTime  @default(now())
}